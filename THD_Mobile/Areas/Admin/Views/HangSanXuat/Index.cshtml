@model List<THD_Mobile.Models.HangSanXuat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
    <h2 class="text-center mb-4">Quản Lý Hãng Sản Xuất</h2>
    <div class="row text-end" style="text-align: center;">
        <a href="@Url.Action("ThemHangSanXuat", "HangSanXuat")" style="" class="btn btn-secondary">Thêm mới</a>
    </div>
    <div class="container">
        <div class="row border-bottom pb-2" style="color: rgba(0,0,0,0.5); font-size: 18px;">
            <div class="col-3">ID Hãng Sản Xuất</div>
            <div class="col-3">Tên Hãng Sản Xuất</div>
            <div class="col-4">Thông Tin Về Hãng</div>
            <div class="col-2">Thao Tác</div>
        </div>

        @foreach (var sp in Model)
        {
            <div class="row mb-2 border-bottom pb-2">
                
                <!-- Cột 3: Tên sản phẩm -->
                <div class="col-3">
                    <h6>@sp.IdHangSanXuat</h6>
                </div>
                <!-- Cột 4: Tên HSX-->
                <div class="col-3">
                    <p>@sp.TenHangSanXuat</p>
                </div>
                <!-- Cột 3: Số lượng -->
                <div class="col-4">

                    <p>@sp.ThongTin</p>
                </div>
                <!-- Cột 5: Ngày thêm -->
                <div class="col-2">
                    <div class="row"><a href="@Url.Action("XoaSanPham", "SanPham", new {idHSX = sp.IdHangSanXuat})" style="margin: 15px 0; width: 80px;" type="button" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');">Xoá</a></div>
                    <div class="row"><a href="@Url.Action("ChinhSuaSanPham", "SanPham", new {id = sp.IdHangSanXuat})" style="width: 80px;" type="button" class="btn btn-sm btn-success">Chỉnh Sửa</a></div>
                </div>
            </div>

        }
    </div>
</main>

