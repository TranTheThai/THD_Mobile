    <script>
        function showToast() {
            var toast = document.getElementById("toast");

            // Thêm class 'show' để hiển thị toast
            toast.className = "toast show";

            // Sau 1 giây, ẩn toast đi
            setTimeout(function () {
                toast.className = toast.className.replace("show", "");
            }, 2000); // Toast sẽ ẩn sau 1000ms (1 giây)
